<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/process_item"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="40dp" android:orientation="horizontal"
        >

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="30dp"
            android:id="@+id/process_item_number"
            />
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:id="@+id/process_item_name"
            />
    <Button
            android:text="@string/process_item_kill_button_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/process_item_kill_button"
            />
</LinearLayout>