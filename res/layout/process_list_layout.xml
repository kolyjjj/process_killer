<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/process_item"
        android:layout_width="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="50dp" android:orientation="horizontal"
        >

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/process_item_number"
            android:layout_weight="1"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/process_item_name"
            android:layout_weight="6"/>
    <Button
            android:text="@string/process_item_kill_button_text"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/process_item_kill_button"
            android:layout_weight="3"/>
</LinearLayout>